<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpenseTracker.Views.EditDeleteExpensePage"
             
             Title="Edit/Delete Expense">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="X"
                     Command="{Binding CancelCommand}"
                     Order="Primary"
                     Priority="0"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Amount" FontAttributes="Bold"/>
            <Entry Text="{Binding Amount}" Keyboard="Numeric"/>

            <Label Text="Category" FontAttributes="Bold"/>
            <Picker ItemsSource="{Binding Categories}"
                    SelectedItem="{Binding SelectedCategory}"/>

            <Label Text="Date" FontAttributes="Bold"/>
            <DatePicker Date="{Binding SelectedDate}"/>

            <Label Text="Description" FontAttributes="Bold"/>
            <Editor Text="{Binding Description}" MaxLength="200"/>

            <Button Text="Save Changes"
                    Command="{Binding SaveCommand}"
                    BackgroundColor="#4CAF50"
                    TextColor="White"/>

            <Button Text="Delete Expense"
                    Command="{Binding DeleteCommand}"
                    BackgroundColor="Red"
                    TextColor="White"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>