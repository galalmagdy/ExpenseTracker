<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpenseTracker.Views.AddExpensePage"
             Title="Add Expense">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="X" 
                     Command="{Binding CancelCommand}" 
                     Order="Primary" 
                     
                     Priority="0" />
    </ContentPage.ToolbarItems>
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Amount" FontAttributes="Bold"/>
            <Entry Placeholder="Enter amount"
                   Keyboard="Numeric"
                   Text="{Binding Amount, Mode=TwoWay}" />

            <Label Text="Category" FontAttributes="Bold"/>
            <Picker ItemsSource="{Binding Categories}"
                    SelectedItem="{Binding SelectedCategory, Mode=TwoWay}" />

            <Label Text="Date" FontAttributes="Bold"/>
            <DatePicker Date="{Binding SelectedDate, Mode=TwoWay}" />

            <Label Text="Description" FontAttributes="Bold"/>
            <Editor Placeholder="Optional description (max 200 chars)"
                    AutoSize="TextChanges"
                    MaxLength="200"
                    Text="{Binding Description, Mode=TwoWay}" />

            <Button Text="Save"
                    Command="{Binding SaveCommand}"
                    BackgroundColor="#4CAF50"
                    TextColor="White" />

            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding HasError}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>