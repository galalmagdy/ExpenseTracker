<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:ExpenseTracker.Views"
            x:Class="ExpenseTracker.Views.AppFlyoutPage"
             >

    <FlyoutPage.Flyout>
        <ContentPage Title="Menu">
            <StackLayout Margin="20">
                <Button Text="Expenses" Margin="8"
                        Clicked="OnExpensesClicked" />
                <Button Text="Summary" Margin="8"
                        Clicked="OnSummaryClicked" />
                <Button Text="Logout" Margin="8"
                        Clicked="OnLogoutClicked" />
            </StackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <views:ExpensesPage />
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>
